                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                <BorderPane layoutX="321.0" layoutY="108.0">
                    <top>
                        <AnchorPane BorderPane.alignment="CENTER">
                            <children>
                                <Label fx:id="labelSimulationId" layoutX="226.0" layoutY="4.0" text="Simulation id: ">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </Label>
                        <Label fx:id="labelIdSimulation" layoutX="352.0" layoutY="11.0" text="labelIdSimulation" />
                            </children>
                        </AnchorPane>
                    </top>
                    <center>
                        <AnchorPane BorderPane.alignment="CENTER">
                            <children>
                                <Label layoutX="14.0" layoutY="28.0" text="Simulation status: ">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <Label layoutX="14.0" layoutY="61.0" text="Current tick count: ">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <Label layoutX="14.0" layoutY="96.0" text="Current timer: ">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <TableView fx:id="tableViewEntities" layoutX="288.0" layoutY="17.0" prefHeight="200.0" prefWidth="266.0">
                                    <columns>
                                        <TableColumn fx:id="tableColumnEntity" prefWidth="134.0" text="Entity" />
                                        <TableColumn fx:id="tableColumnPopulation" prefWidth="131.0" text="Population" />
                                    </columns>
                                </TableView>
                                <Label fx:id="labelSimulationStatus" layoutX="152.0" layoutY="28.0" prefHeight="17.0" prefWidth="66.0" text="Label">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <Label fx:id="labelCurrTick" layoutX="152.0" layoutY="61.0" prefHeight="17.0" prefWidth="66.0" text="Label">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <Label fx:id="labelCurrTimer" layoutX="152.0" layoutY="96.0" prefHeight="17.0" prefWidth="66.0" text="Label">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                            </children>
                        </AnchorPane>
                    </center>
               <bottom>
                  <AnchorPane BorderPane.alignment="CENTER">
                     <children>
                                <Button fx:id="buttonStop" layoutX="457.0" layoutY="15.0" mnemonicParsing="false" text="Stop" />
                                <Button fx:id="buttonPause" layoutX="513.0" layoutY="15.0" mnemonicParsing="false" text="Pause" />
                                <Button fx:id="buttonResume" layoutX="578.0" layoutY="15.0" mnemonicParsing="false" text="Resume" />
                                <Button layoutX="28.0" layoutY="13.0" mnemonicParsing="false" onAction="#ReRunSimulation" text="Re-Run" />
                     </children>
                  </AnchorPane>
               </bottom>
                </BorderPane>
            </children></AnchorPane>
    </content>
</ScrollPane>
