<ScrollPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.sceneController.resultsController.ResultsController">
    <content>
        <AnchorPane styleClass="backGroundColor" stylesheets="@../../../cssDesign/homePageDesign.css">
            <children>
                <ListView fx:id="listViewSimulations" layoutX="31.0" layoutY="108.0" onMouseClicked="#selectedItem" />
