<VBox xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.sceneController.SceneMenu">
   <children>
      <ScrollPane>
         <content>
            <BorderPane styleClass="backGroundColor" stylesheets="@../../cssDesign/homePageDesign.css">
               <center>
                  <TabPane fx:id="tabPaneManager" styleClass="backGroundColor" stylesheets="@../../cssDesign/homePageDesign.css" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
                    <tabs>
                      <Tab fx:id="tabOfDetails" text="Details">
                        <content>
                            <fx:include source="sceneDetails/Details.fxml" />
                        </content>
                      </Tab>
                      <Tab fx:id="tabOfNewExecution" text="New Execution">
                        <content>
                          <AnchorPane styleClass="backGroundColor" stylesheets="@../../cssDesign/homePageDesign.css" />
                            <fx:include source="sceneNewExecution/newExecution.fxml" />
                        </content>
                      </Tab>
                        <Tab fx:id="tabOfResults" text="Results">
                          <content>
                              <AnchorPane prefHeight="502.0" prefWidth="963.0">
                                 <children>
                                    <ScrollPane>
                                       <content>
                                          <fx:include source="sceneResults/Results.fxml" />
                                       </content>
                                    </ScrollPane>
                                 </children>
                              </AnchorPane>
                          </content>
                        </Tab>
                    </tabs>
                  </TabPane>
               </center>
               <top>
                  <AnchorPane BorderPane.alignment="CENTER">
                     <children>
                        <Label id="title" layoutX="475.0" layoutY="12.0" stylesheets="@../../cssDesign/homePageDesign.css" text="Predictions" textAlignment="CENTER">
                           <font>
                              <Font size="17.0" />
                           </font>
                        </Label>
                        <TextField fx:id="textFilePath" layoutX="213.0" layoutY="40.0" prefHeight="17.0" prefWidth="566.0" />
                        <Button id="LoadXmlFileButton" fx:id="ButtonLoadFile" layoutX="37.0" layoutY="40.0" mnemonicParsing="false" onAction="#onClickButtonLoadFile" prefHeight="25.0" prefWidth="161.0" text="Load xml file" textAlignment="CENTER" />
                        <Label id="QueueManagment" layoutX="788.0" layoutY="2.0" prefHeight="26.0" prefWidth="152.0" text="Queue Managment">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Label>
                        <Label layoutX="788.0" layoutY="29.0" prefHeight="18.0" prefWidth="165.0" text="Simulations in progress :" />
                        <Label layoutX="788.0" layoutY="47.0" prefHeight="18.0" prefWidth="165.0" text="Ended simulations :" />
                        <Label fx:id="fileStatus" layoutX="213.0" layoutY="67.0" prefHeight="18.0" prefWidth="564.0" text="File status :" />
                        <Label fx:id="numberOfSimulationInProgress" layoutX="958.0" layoutY="29.0" text="Label" />
                        <Label layoutX="788.0" layoutY="64.0" prefHeight="18.0" prefWidth="165.0" text="Simulations pending :" />
                        <Label fx:id="endedSimulation" layoutX="958.0" layoutY="47.0" text="Label" />
                        <Label fx:id="simulationInWaiting" layoutX="958.0" layoutY="64.0" text="Label" />
                     </children>
                  </AnchorPane>
               </top>
            </BorderPane>
         </content>
      </ScrollPane>
   </children>
</VBox>
